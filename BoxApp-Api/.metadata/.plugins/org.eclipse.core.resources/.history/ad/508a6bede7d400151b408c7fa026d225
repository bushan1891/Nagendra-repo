package com.jcs.MailService;



import java.io.UnsupportedEncodingException;
import java.util.Properties;
import javax.mail.Message;
import javax.mail.MessagingException;
import javax.mail.Session;
import javax.mail.Transport;
import javax.mail.internet.AddressException;
import javax.mail.internet.InternetAddress;
import javax.mail.internet.MimeMessage;

public class MailService {

	 Properties props = new Properties();
     Session session = Session.getDefaultInstance(props, null);

     String msgBody = ".heyyy..";
     
     
    public void mail() throws UnsupportedEncodingException{
    	

        try {
        	System.out.println("i am him mail service");
        	
            Message msg = new MimeMessage(session);
            msg.setFrom(new InternetAddress("bushan1891@gmail.com", "@gmail.com Bushan"));
            msg.addRecipient(Message.RecipientType.TO,
                             new InternetAddress("bushan1891@gmail.com", "Mr. User"));
            msg.setSubject("Your Example.com account has been activated");
            msg.setText(msgBody);
            Transport.send(msg);

        } catch (AddressException e) {
            // ...
        } catch (MessagingException e) {
            // ...
        } 	
    }
	
	
	
	
	
}
